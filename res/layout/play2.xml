<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/gridview"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:numColumns="3"
       android:verticalSpacing="10dp"
       android:horizontalSpacing="10dp"
       android:stretchMode="columnWidth"
       android:layout_gravity="center_horizontal"
       android:gravity="center_horizontal"
       android:background="#237935"
>
      <!-- Score -->

       <LinearLayout
               android:orientation="vertical"
               android:layout_column="0"
               android:layout_row="0"
               android:layout_gravity="center_horizontal"
       >
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="70dp"
                android:text="Equipe1:"
                android:layout_height="20dp"
            />
            <TextView
                android:id="@+id/scoreEquipe1"
                android:layout_width="30dp"
                android:text="xxx"
                android:layout_height="20dp"
            />

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
            >
                <TextView
                    android:layout_width="70dp"
                    android:text="Equipe2:"
                    android:layout_height="20dp"
                />
                <TextView
                    android:id="@+id/scoreEquipe2"
                    android:layout_width="30dp"
                    android:text="xxx"
                    android:layout_height="20dp"
                />
            </LinearLayout>
       </LinearLayout>

    <!-- ** Joueur du Haut **-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="center_horizontal"
          >
            <TextView
                android:layout_width="100dp"
                android:text="Equipe2 :: Player 2"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
            />
          <ImageView
                  android:layout_height="150dp"
                  android:layout_width="80dp"
                  android:src="@drawable/c0"
              />
        </LinearLayout>

        <!-- ** Joueur Gauche ** -->
        <LinearLayout
            android:layout_marginLeft="5dp"
            android:orientation="vertical"
            android:layout_column="0"
            android:layout_row="1"
            >
        <TextView
                android:gravity="center_horizontal"
                android:layout_width="100dp"
                android:text="Equipe1 :: Player 1"
                android:layout_height="20dp"
                />
        <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_height="150dp"
                android:layout_width="80dp"
                android:src="@drawable/c0"
                />
        </LinearLayout>

    <!-- ** Tapis ** -->
    <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_column="1"
            android:layout_row="1"
            >
        <ImageView
            android:id="@+id/tapis1"
            android:layout_marginRight="10dp"
            android:layout_height="150dp"
            android:layout_width="80dp"
            android:src="@drawable/c0"
            />
        <ImageView
            android:id="@+id/tapis2"
            android:layout_marginRight="10dp"
            android:layout_height="150dp"
            android:layout_width="80dp"
            android:src="@drawable/c0"
                />
        <ImageView
            android:id="@+id/tapis3"
            android:layout_marginRight="10dp"
            android:layout_height="150dp"
            android:layout_width="80dp"
            android:src="@drawable/c0"
                />
        <ImageView
            android:id="@+id/tapis4"
            android:layout_marginRight="10dp"
            android:layout_height="150dp"
            android:layout_width="80dp"
            android:src="@drawable/c0"
                />
    </LinearLayout>

    <!-- ** Joueur Droite ** -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_column="3"
            android:layout_row="1"
            >
        <TextView
                android:gravity="center_horizontal"
                android:layout_width="100dp"
                android:text="Equipe1 :: Player 3"
                android:layout_height="20dp"
                />
        <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_height="150dp"
                android:layout_width="80dp"
                android:src="@drawable/c0"
                />
    </LinearLayout>

    <!-- ** Donne ** -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_column="3"
            android:layout_row="0"
            >
        <TextView
                android:gravity="center_horizontal"
                android:layout_width="100dp"
                android:text="Donne"
                android:layout_height="20dp"
                />
        <ImageView
                android:id="@+id/pile"
                android:layout_gravity="center_horizontal"
                android:layout_height="150dp"
                android:layout_width="80dp"
                android:src="@drawable/c0"
                />
    </LinearLayout>

    <!-- ** Joueur ** -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_column="1"
            android:layout_row="2"
            >
        <TextView
            android:layout_width="fill_parent"
            android:text="Equipe2 :: Vous"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
            <ImageView
                    android:id="@+id/carte0"
                    android:layout_marginRight="2dp"
                    android:layout_height="150dp"
                    android:layout_width="80dp"
                    android:src="@drawable/c0"
                    />
            <ImageView
                    android:id="@+id/carte1"
                    android:layout_marginRight="2dp"
                    android:layout_height="150dp"
                    android:layout_width="80dp"
                    android:src="@drawable/c0"
                    />
            <ImageView
                    android:id="@+id/carte2"
                    android:layout_marginRight="2dp"
                    android:layout_height="150dp"
                    android:layout_width="80dp"
                    android:src="@drawable/c0"
                    />
            <ImageView
                    android:id="@+id/carte3"
                    android:layout_marginRight="2dp"
                    android:layout_height="150dp"
                    android:layout_width="80dp"
                    android:src="@drawable/c0"
                    />
            <ImageView
                    android:id="@+id/carte4"
                    android:layout_marginRight="2dp"
                    android:layout_height="150dp"
                    android:layout_width="80dp"
                    android:src="@drawable/c0"
                    />
            <ImageView
                    android:id="@+id/carte5"
                    android:layout_marginRight="2dp"
                    android:layout_height="150dp"
                    android:layout_width="80dp"
                    android:src="@drawable/c0"
                    />
            <ImageView
                    android:id="@+id/carte6"
                    android:layout_marginRight="2dp"
                    android:layout_height="150dp"
                    android:layout_width="80dp"
                    android:src="@drawable/c0"
                    />
            <ImageView
                    android:id="@+id/carte7"
                    android:layout_marginRight="2dp"
                    android:layout_height="150dp"
                    android:layout_width="80dp"
                    android:src="@drawable/c0"
                    />
        </LinearLayout>
    </LinearLayout>

</GridLayout>
